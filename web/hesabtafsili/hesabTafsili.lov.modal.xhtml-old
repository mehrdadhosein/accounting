<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:custom="http://seraj.com/seraj/facelet"
	xmlns:t="http://myfaces.apache.org/tomahawk">

<ui:composition template="/template/template.xhtml">
	<ui:param name="title" value="#{messages['HesabTafsili_list']}" />
	<ui:param name="owner" value="#{hesabTafsili}" />
	
	<ui:define name="maindetail">
	<h:messages/>
		<h:panelGrid columns="5" styleClass="inputForm">

			<h:outputLabel for="code" value="#{messages['HesabTafsili_code']}" />
			<h:outputLabel for="name" value="#{messages['HesabTafsili_name']}" />
			<h:outputLabel for="tafsilType"	value="#{messages['HesabTafsili_tafsilType']}" />
			<h:outputLabel for="type" value="#{messages['HesabTafsili_type']}" />
			<h:panelGroup/>
			<h:inputText id="code" value="#{hesabTafsili.filter['code@lk']}" style="width:80px"/>
			<h:inputText id="name" value="#{hesabTafsili.filter['name@lk']}" />
			<h:selectOneMenu value="#{hesabTafsili.filter['tafsilType@eq']}"  
				label="#{messages['HesabTafsili_type']}" id="tafsilType" converter="StringConverter">
				<f:selectItems value="#{enums.TafsilTypeEnum}" />
			</h:selectOneMenu>
			<h:selectOneMenu value="#{hesabTafsili.filter['type@lk']}" 
				label="#{messages['HesabTafsili_type']}" id="type" converter="StringConverter">
				<f:selectItems value="#{enums.HesabTypeEnum}" />
			</h:selectOneMenu>

			<h:commandButton styleClass="ButtonStyle" value="#{messages['common_search']}" actionListener="#{hesabTafsili.search}">
			</h:commandButton>
		</h:panelGrid>
		<rich:dataTable id="hesabTafsilis" value="#{hesabTafsili.dataModel}"
			var="item" rowClasses="RowOdd,RowEven" rows="10" style="width:100%">

			<rich:column>
				<f:facet name="header">
					<h:outputText styleClass="headerCellClass"
						value="#{messages['HesabTafsili_code']}" />
				</f:facet>
				<h:outputText styleClass="CellClass" value="#{item.code}" />
			</rich:column>
			<rich:column>
				<f:facet name="header">
					<h:outputText styleClass="headerCellClass"
						value="#{messages['HesabTafsili_name']}" />
				</f:facet>
				<h:outputText styleClass="CellClass" value="#{item.name}" />
			</rich:column>
			<rich:column>
				<f:facet name="header">
					<h:outputText styleClass="headerCellClass"
						value="#{messages['HesabTafsili_tafsilType']}" />
				</f:facet>
				<t:selectOneMenu value="#{item.tafsilType}"  displayValueOnly="true"
					label="#{messages['HesabTafsili_type']}" id="tafsilType" converter="StringConverter">
					<f:selectItems value="#{enums.TafsilTypeEnum}" />
				</t:selectOneMenu>
			</rich:column>
			<rich:column>
				<f:facet name="header">
					<h:outputText styleClass="headerCellClass"
						value="#{messages['HesabTafsili_type']}" />
				</f:facet>
				<t:selectOneMenu value="#{item.type}"  displayValueOnly="true"
					label="#{messages['HesabTafsili_type']}" id="type" converter="StringConverter">
					<f:selectItems value="#{enums.HesabTypeEnum}" />
				</t:selectOneMenu>
			</rich:column>
			<rich:column>
				<f:facet name="header">
					<h:outputText styleClass="headerCellClass"
						value="#{messages['HesabTafsili_description']}" />
				</f:facet>
				<h:outputText styleClass="CellClass" value="#{item.description}" />
			</rich:column>
			<rich:column style="width:50px">
				<rich:dataTable id="moeens" value="#{item.moeenList}"
					var="moeen" rowClasses="RowOdd,RowEven" rows="10" style="width:100%">
					<rich:column>
						<h:commandButton value="#{moeen.name}"
							onclick="javascript:window.parent.selectHesabModal('#{item.id}','#{item.name}','#{moeen.id}','#{moeen.name}');return false" />
					</rich:column>
				</rich:dataTable>
			</rich:column>
		</rich:dataTable>
		<rich:dataScroller for="hesabTafsilis"></rich:dataScroller>
	</ui:define>
</ui:composition>
</html>
