<?xml version="1.0" encoding="UTF-8"?>
<project name="accounting-offline" default="Copy offline">
	<import file="../core/build.xml" />
	<property environment="env">
	</property>
	<property name="coredir" value="../core" />
	<property name="csmdir" value="../csm" />
	<property name="casdir" value="../cas" />
	<property name="webapp.name" value="accounting" />
	<property name="deploydir" value="${catalina.home}/webapps/${webapp.name}" />

		<target name="Copy Spring Configs">
			<copy todir="${deploydir}/WEB-INF/classes/config/spring/" flatten="true" verbose="true">
				<fileset dir="src">
					<exclude name="**/SpringConfig-singleUserDetailsService.xml" />
					<include name="**/applicationContext-*.xml" />
					<include name="**/SpringConfig-*.xml" />
				</fileset>
			</copy>
			<copy todir="${deploydir}/WEB-INF/classes/config/spring/" flatten="true" verbose="true">
				<fileset dir="${coredir}/src">
					<exclude name="**/SpringConfig-singleUserDetailsService.xml" />
					<include name="**/SpringConfig-*.xml" />
					<include name="**/applicationContext-*.xml" />
				</fileset>
			</copy>
		</target>

		<target name="Merge offline Properties">
			<echo>salam</echo>
			<concat destfile="web/WEB-INF/classes/ApplicationResources.properties">
				<fileset dir="src">
					<include name="**/*-messages.properties" />
				</fileset>
				<fileset dir="${coredir}/src">
					<include name="**/*-messages.properties" />
				</fileset>
				<fileset dir="${csmdir}/src">
					<include name="**/*-messages.properties" />
				</fileset>
				<fileset dir="${casdir}">
					<include name="**/*.properties" />
				</fileset>
			</concat>
		</target>
		<target name="Merge offline Access Controls">
			<concat destfile="web/WEB-INF/classes/access-control.properties" append="false" fixlastline="true">
				<fileset dir="web">
					<include name="**/access-control-*.properties" />
				</fileset>
				<fileset dir="${csmdir}/web">
					<include name="**/access-control-*.properties" />
				</fileset>
				<fileset dir="${coredir}/web">
					<include name="**/access-control-*.properties" />
				</fileset>
			</concat>
		</target>
		<target name="Merge offline Excel Properties">
			<echo>salam</echo>
			<concat destfile="web/WEB-INF/classes/excelExportColumns.properties" append="false">
				<fileset dir="src">
					<include name="**/*-excelColumns.properties" />
				</fileset>
				<fileset dir="${csmdir}/src">
					<include name="**/*-excelColumns.properties" />
				</fileset>
				<fileset dir="${coredir}/src">
					<include name="**/*-excelColumns.properties" />
				</fileset>
			</concat>
		</target>

		<target name="Merge offline DataTable Properties">
			<echo>salam</echo>
			<concat destfile="web/WEB-INF/classes/dataTableColumns.properties" append="false">
				<fileset dir="resource">
					<include name="**/*-dataTableColumns.properties" />
				</fileset>
				<fileset dir="${coredir}/resource">
					<include name="**/*-dataTableColumns.properties" />
				</fileset>
			</concat>
		</target>
					
	<target name="Copy offline" depends="CopyFilesCore,Merge offline Access Controls,Merge offline Properties,
		Merge offline Excel Properties,Merge offline DataTable Properties, Copy Spring Configs,Copy Fonts,Copy csm,Copy offline web_xml">
		<copy todir="${deploydir}/WEB-INF/classes/config/spring/" flatten="true" verbose="true">
			<fileset dir="${coredir}">
				<include name="**/SpringConfig-singleUserDetailsService.xml" />
			</fileset>
			<fileset dir=".">
				<include name="**/SpringConfig-singleUserDetailsService.xml" />
			</fileset>
		</copy>
		 <copy todir="${deploydir}/WEB-INF/classes" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/ehcache.xml" />
		 		<include name="**/*.properties" />
		 	</fileset>
		 </copy>
		 <copy todir="${deploydir}/WEB-INF/classes/config/spring/" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/SpringConfig-Hibernate.xml" />
				<include name="**/SpringConfig-Security.xml" />
		 	</fileset>
		 </copy>
		 <copy todir="${deploydir}/" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/mainPage.active.view.xhtml" />
		 		<include name="**/login.xhtml" />
		 		<include name="**/mainPage.txt" />
		 		<include name="**/accounting-menu.xml" />
	 	</fileset>
			<fileset dir=".">
		 		<include name="**/*.bat" />
			</fileset>
		 </copy>
	</target>
	<target name="Copy offline web"  >
		<copy todir="${deploydir}" verbose="true">
			<fileset dir="${coredir}/web">
				<include name="**/*.jsp" />
				<include name="**/*.js" />
				<include name="**/*.css" />
				<include name="**/*.xhtml" />
				<include name="**/*.html" />
				<include name="**/*.htm" />
			</fileset>
		</copy>
		<copy todir="${deploydir}" verbose="true">
			<fileset dir="web">
				<include name="**/*.jsp" />
				<include name="**/*.js" />
				<include name="**/*.css" />
				<include name="**/*.html" />
				<include name="**/*.xhtml" />
				<include name="**/*.xml" />

			</fileset>
		</copy>
		 <copy todir="${deploydir}/" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/mainPage.active.view.xhtml" />
		 	</fileset>
		 </copy>
		 <copy todir="${deploydir}/" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/mainPage.txt" />
		 	</fileset>
		 </copy>
	</target>

	<target name="Copy offline web_xml">
		 <copy todir="${deploydir}/WEB-INF/" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/web.xml" />
		 	</fileset>
		 </copy>	
	</target>

	<target name="Copy csm" depends="Copy csm Spring Configs">
		<copy todir="${deploydir}" verbose="true">
			<fileset dir="${csmdir}/web">
				<include name="**/*.*" />
			</fileset>
		</copy>
		<copy todir="${deploydir}/WEB-INF/lib" verbose="true" flatten="true">
			<fileset dir="${csmdir}/lib">
				<include name="activiti/*.jar" />
			</fileset>
		</copy>
		 <copy todir="${deploydir}" verbose="true" overwrite="true">
		 	<fileset dir="./offline">
		 		<include name="**/csm-cartable.xml" />
		 		<include name="**/csm-menu.xml" />
		 		<include name="**/menu.xhtml" />
		 	</fileset>
		 </copy>		
	</target>

	<target name="Copy csm Spring Configs">
		<copy todir="${deploydir}/WEB-INF/classes/config/spring/" flatten="true" verbose="true">
			<fileset dir="${csmdir}/src">
				<include name="**/applicationContext-*.xml" />
				<include name="**/SpringConfig-*.xml" />
			</fileset>
		</copy>
	</target>
	
	<target name="Clean Tomcat">
			<delete dir="${deploydir}" />
			<delete dir="${catalina.home}/work" />
		</target>
	</project>
